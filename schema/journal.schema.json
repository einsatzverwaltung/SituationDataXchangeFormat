{
  "$id": "SdxfJournal",
  "title": "Journal of Messages",
  "description": "A list of messages which has been recorded for this situation",
  "type": "array",
  "items": {
    "$id": "JournalEntry",
    "type": [
      "object",
      "null"
    ],
    "properties": {
      "uid": {
        "description": "Unique ID of this entry",
        "type": "string"
      },
      "time": {
        "description": "Time when entry was created / reported",
        "type": "string",
        "format": "date-time"
      },
      "from": {
        "description": "Sender of this entry",
        "type": [
          "string",
          "null"
        ]
      },
      "to": {
        "description": "Receiver of this entry",
        "type": [
          "string",
          "null"
        ]
      },
      "text": {
        "description": "Content of this entry",
        "type": [
          "string",
          "null"
        ]
      },
      "editor": {
        "description": "Name of the editor or author of this entry",
        "type": [
          "string",
          "null"
        ]
      },
      "type": {
        "description": "The type of the entry",
        "type": "string",
        "enum": [
          "Log",
          "Request",
          "Situation",
          "Info",
          "Decision",
          "Mission"
        ]
      },
      "customProperties": {
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": {}
      }
    },
    "required": [
      "uid",
      "time",
      "from",
      "to",
      "text",
      "editor",
      "type",
      "customProperties"
    ]
  }
}