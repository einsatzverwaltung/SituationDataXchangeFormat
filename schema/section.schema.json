    "$id": "SectionEntry",
    "type": [
      "object",
      "null"
    ],
    "properties": {
      "uid": {
        "description": "Unique ID of this section",
        "type": "string"
      },
      "name": {
        "description": "Name of this section",
        "type": "string"
      },
      "shortcut": {
        "description": "Shortcut for this section",
        "type": "string"
      },
      "type": {
        "description": "Type of this section",
        "type": "string",
        "enum": [
          "StagingSection",
          "OperationalSection"
        ]
      },
      "subSections": {
        "$id": "List`1",
        "description": "Optional Sub-Sections of this Section",
        "type": [
          "array",
          "null"
        ],
        "items": {
          "$ref": "SectionEntry"
        }
      },
      "customProperties": {
        "type": [
          "object",
          "null"
        ],
        "additionalProperties": {}
      }
    },
    "required": [
      "uid",
      "name",
      "shortcut",
      "type",
      "subSections",
      "customProperties"
    ]
  }
}